{
  "name": "@bexio/mcp-server",
  "version": "2.0.0",
  "description": "Model Context Protocol server for Bexio API integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "bexio-mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npm run build:ui",
    "build:ui": "node -e \"const fs=require('fs'); if(fs.existsSync('src/ui')){const{execSync}=require('child_process');execSync('npx vite build',{stdio:'inherit'})}else{console.log('Skipping UI build - src/ui not found')}\"",
    "dev": "tsx watch src/index.ts",
    "dev:ui": "vite build --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bexio/mcp-server.git"
  },
  "homepage": "https://github.com/bexio/mcp-server#readme",
  "bugs": {
    "url": "https://github.com/bexio/mcp-server/issues"
  },
  "keywords": [
    "mcp",
    "bexio",
    "api",
    "typescript",
    "model-context-protocol",
    "claude",
    "accounting",
    "invoices",
    "swiss"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "axios": "^1.7.0",
    "zod": "3.25.76",
    "dotenv": "^16.3.0",
    "fastify": "^4.28.0",
    "@fastify/cors": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "typescript": "^5.5.0",
    "tsx": "^4.0.0",
    "vitest": "^2.0.0",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.3.0",
    "concurrently": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
